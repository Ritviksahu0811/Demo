<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="160dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:cardCornerRadius="10dp"
        android:background="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl1"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            >
        <TextView
            android:id="@+id/tvDevice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="15dp"
            android:textColor="#055AE3"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/cl1"
            app:layout_constraintTop_toTopOf="@id/cl1"
            tools:text="Device ID" />

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="230dp"
                android:layout_marginTop="15dp"
                android:textColor="#26C215"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/cl1"
                app:layout_constraintTop_toTopOf="@id/cl1"
                tools:text="04:15" />


            <TextView
                android:id="@+id/titleTv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="48dp"
                android:layout_marginTop="60dp"
                android:text="T:"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/cl1"
                app:layout_constraintTop_toTopOf="@id/cl1" />

            <TextView
            android:id="@+id/titleTv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="60dp"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/cl1"
            app:layout_constraintTop_toTopOf="@id/cl1"
            tools:text="30 C" />

            <TextView
                android:id="@+id/titleTv5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="230dp"
                android:layout_marginTop="60dp"
                android:text="pH:"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/cl1"
                app:layout_constraintTop_toTopOf="@id/cl1" />

            <TextView
                android:id="@+id/titleTv6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="300dp"
                android:layout_marginTop="60dp"
                android:layout_marginEnd="48dp"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@id/cl1"
                app:layout_constraintStart_toStartOf="@id/cl1"
                app:layout_constraintTop_toTopOf="@id/cl1"
                tools:text="7 C" />

            <TextView
                android:id="@+id/titleTv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="48dp"
                android:layout_marginBottom="20dp"
                android:textColor="@color/black"
                android:text="DO:"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/cl1"
                app:layout_constraintStart_toStartOf="@id/cl1" />

            <TextView
                android:id="@+id/titleTv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:layout_marginBottom="20dp"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/cl1"
                app:layout_constraintStart_toStartOf="@id/cl1"
                tools:text="90%" />

            <TextView
                android:id="@+id/titleTv7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="230dp"
                android:layout_marginBottom="20dp"
                android:text="TDS:"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/cl1"
                app:layout_constraintStart_toStartOf="@id/cl1" />

            <TextView
                android:id="@+id/titleTv8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="300dp"
                android:layout_marginEnd="48dp"
                android:layout_marginBottom="20dp"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/cl1"
                app:layout_constraintEnd_toEndOf="@id/cl1"
                app:layout_constraintStart_toStartOf="@id/cl1"
                tools:text="100" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>


